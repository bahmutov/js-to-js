{
  "name": "js-to-js",
  "description": "ExpressJS template engine to render JavaScript from JavaScript to avoid inlined code and allow strict and safe Content-Security-Policy",
  "main": "index.js",
  "version": "0.0.0-semantic-release",
  "scripts": {
    "test": "npm run lint",
    "lint": "eslint index.js",
    "commit": "git-issues && commit-wizard",
    "issues": "git-issues",
    "semantic-release": "semantic-release pre && npm publish && semantic-release post",
    "pkgfiles": "pkgfiles",
    "size": "tarball=\"$(npm pack .)\"; wc -c \"${tarball}\"; tar tvf \"${tarball}\"; rm \"${tarball}\";"
  },
  "release": {
    "verifyConditions": {}
  },
  "files": [
    "index.js"
  ],
  "repository": {
    "type": "git",
    "url": "https://github.com/bahmutov/js-to-js.git"
  },
  "keywords": [
    "express",
    "expressjs",
    "middleware",
    "content-security-policy",
    "CSP",
    "templates",
    "engine",
    "security"
  ],
  "author": "Gleb Bahmutov <gleb.bahmutov@gmail.com>",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/bahmutov/js-to-js/issues"
  },
  "homepage": "https://github.com/bahmutov/js-to-js#readme",
  "config": {
    "pre-git": {
      "commit-msg": "validate-commit-msg",
      "pre-commit": [
        "npm run lint",
        "npm run test"
      ],
      "pre-push": [
        "npm run pkgfiles",
        "npm run size"
      ],
      "post-commit": [],
      "post-merge": []
    }
  },
  "devDependencies": {
    "eslint": "1.10.1",
    "git-issues": "1.2.0",
    "pkgfiles": "2.3.0",
    "pre-git": "1.3.1",
    "semantic-release": "^4.3.5"
  },
  "dependencies": {
    "debug": "2.2.0",
    "git-issues": "1.2.0",
    "pre-git": "1.3.1"
  }
}
